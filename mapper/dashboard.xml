<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dashboard">
    <select id="select">
        select
            a.id,
            a.content
        from dashboard a join calendar b
                              on a.id = b.id
        where a.id = #{id}
    </select>

    <insert id="insert">
        insert into dashboard (id) values (#{id})
    </insert>

    <select id="update">
        update dashboard
        set content = #{content}
        where id = #{id}
    </select>
</mapper>